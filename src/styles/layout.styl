.fsc
  width 100vw
  height 100vh

.maximage, .slide
  width 100vw
  height 100vh

.slide
  background-size cover
  background-position center

.centerer
  width 100%
  height 100%
  display table
  .content
    display table-cell
    vertical-align middle

section
  h1, h2, h3
    font-weight 700

.section-dark
  background #0A1533
  h1, h2, h3, h4
    color white
    text-shadow 0 2px 4px rgba(0,0,0,.6)

.section-gray
  background #f9f9f9
.row
  &.nopadding
    [class*=col-]
      padding 0


.paper
  padding 15px
  background white
  box-shadow 0 2px 3px hsla(224,80,20,.6)
  color #0A1533
  h2
    color #0A1533!important
    text-shadow none!important

.square
  display block
  width 100%
  height 0
  padding-bottom 100%
  position relative
  background-size cover
  background-position center
  .content
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    padding-left 30px
    padding-right 30px
    h2
      margin-top 0


hr.underliner
  width 40%
  margin 20px 30% 10px
  height 0
  border-top 0
  border-bottom 4px solid #1F409A

.uppercase-indent
  letter-spacing 1px

#contact
  color #1F409A
  font-family 'Montserrat', sans-serif


#googlemap
  width 100%
  height 400px

@media (min-width: 991px)
  .grab-left
    margin-left -30px
    margin-top 30px
  .paper
    padding-top 0
    padding-left 0
    padding-right 0